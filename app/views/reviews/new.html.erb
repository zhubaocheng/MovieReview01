<div class="col-md-8 col-md-offset-2">
  <h2 class="text-center">新增影评</h2>

  <%= simple_form_for [@movie, @review] do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", class: "btn btn-primary", disable_with: "Submiting..." %>
    </div>
  <% end %>
</div>
