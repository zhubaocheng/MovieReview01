<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@movie)%>
        <label class="label label-success">已收藏</label>
        <%= link_to("取消收藏", quit_movie_path(@movie), method: :post, class: "btn btn-default")%>
      <% else %>
        <label class="label label-warning">未收藏</label>
        <%= link_to("收藏", join_movie_path(@movie), method: :post, class: "btn btn-default ")%>
      <% end %>
    </span>
    <%= link_to("写影评", new_movie_review_path(@movie), class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @movie.user%>
      <%= link_to("编辑电影", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h1><%= @movie.title %></h1>
  <p><%= @movie.description %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>影评内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @reviews %>
  </div>
</div>
